{
  "name": "@jahia/user-password-authentication-ui",
  "description": "JavaScript module providing the user interface for the User Password Authentication (UPA) module.",
  "version": "0.1.0-SNAPSHOT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jahia/user-password-authentication.git",
    "directory": "ui"
  },
  "type": "module",
  "files": [
    "dist",
    "src/**/*.cnd",
    "settings",
    "static"
  ],
  "scripts": {
    "build": "tsc --noEmit && vite build && run package",
    "clean": "rm -rf dist/",
    "deploy": "jahia-deploy",
    "dev": "vite build --watch",
    "format": "prettier --write --list-different .",
    "lint": "eslint .",
    "package": "yarn pack --out dist/package.tgz",
    "watch": "run dev",
    "watch:callback": "run package && run deploy"
  },
  "dependencies": {
    "@fontsource-variable/nunito-sans": "^5.2.7",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "modern-normalize": "^3.0.1"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.49.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.26.0",
    "@jahia/javascript-modules-library": "^0.9.2",
    "@jahia/vite-plugin": "^0.9.2",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^19.1.2",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "i18next": "^25.6.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-i18next": "^15.7.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^7.0.0"
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "jahia": {
    "name": "UPA - UI",
    "module-dependencies": "default,user-password-authentication-api",
    "module-type": "module",
    "server": "dist/server/index.js",
    "static-resources": "/dist/client,/dist/assets,/locales,/images,/icons"
  }
}
